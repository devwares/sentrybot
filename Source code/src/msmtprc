# Valeurs par défaut pour tous les comptes.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Compte Ovh
account        %%mailaccountname%%
host           %%mailservername%%
port           %%mailserverport%%
from           %%mailfrom%%
user           %%mailuser%%
password       %%mailpassword%%

# Définir le compte par défaut
account default : %%mailaccountname%%
